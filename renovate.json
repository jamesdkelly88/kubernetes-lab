{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "baseBranches": [
        "main"
    ],
    "packageRules": [],
    "flux": {
        "fileMatch": ["\\.yaml$"]
    },
    "kubernetes": {
        "fileMatch": [
            "apps/.+\\.yaml$",
            "infrastructure/.+\\.yaml$"
        ]
    }
}